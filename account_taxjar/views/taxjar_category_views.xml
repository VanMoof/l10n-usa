    <record id="taxjar_category_form" model="ir.ui.view">
        <field name="name">taxjar.category.from</field>
        <field name="model">taxjar.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="taxjar_category_tree" model="ir.ui.view">
        <field name="name">taxjar.category.tree</field>
        <field name="model">taxjar.category</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="taxjar_category_search" model="ir.ui.view">
        <field name="name">taxjar.category.search</field>
        <field name="model">taxjar.category</field>
        <field name="arch" type="xml">
            <search string="Product Tax Category">
                <field name="name"/>
                <field name="code" string="Product Tax Code"/>
                <field name="description"/>
            </search>
        </field>
    </record>

    <record id="taxjar_category_action" model="ir.actions.act_window">
        <field name="name">TaxJar Categories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">taxjar.category</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="taxjar_category_tree"/>
    </record>

    <menuitem action="taxjar_category_action" id="menu_taxjar_categories" parent="menu_taxjar" sequence="2"/>

</odoo>
